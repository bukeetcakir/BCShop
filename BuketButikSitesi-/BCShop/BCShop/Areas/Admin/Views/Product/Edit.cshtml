@model BCShop.Entity.Concrete.Product
@{
    ViewData["Title"] = "Update";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ürün Güncelleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Ürün Güncelleme</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form asp-area="Admin" asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductID">
            <div class="row">
                <div class="col-md-9">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Ürün Bilgileri</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name">Ürün Adı</label>
                                    <input asp-for="Name" class="form-control">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Properties">Özellikler</label>
                                    <textarea asp-for="Properties" class="form-control" rows="4"></textarea>
                                    <span class="text-danger" asp-validation-for="Properties"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Price">Fiyat</label>
                                    <input asp-for="Price" class="form-control">
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Note">Açıklama</label>
                                    <textarea asp-for="Note" class="form-control" rows="4"></textarea>
                                    <span class="text-danger" asp-validation-for="Note"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Amount">Miktar</label>
                                    <input asp-for="Amount" class="form-control">
                                    <span class="text-danger" asp-validation-for="Amount"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="formFile" class="form-label">Resim</label>
                                    <input class="form-control" type="file" id="image" name="image" accept="image/jpeg">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <div class="col-md-3">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Kategoriler</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            @Html.DropDownListFor(model => model.CategoryID, (IEnumerable<SelectListItem>)ViewBag.cv, "-- Kategori Seç --", new { @class = "form-control" })
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Status">
                                <label asp-for="Status" class="form-check-label" for="flexCheckChecked"></label>
                            </div>
                        </div>

                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                    <input type="submit" value="Güncelle" class="btn btn-success float-right">
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->