@model CartModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

    
    <!--//banner-->
    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Alışveriş Sepeti</h3>
            <div class="row inner-sec">
                <div class="col-lg-12 left-blog-info-w3layouts-agileits text-left">
<div class="row mt-5">
    <div class="col-md-8">
        <div class="text-left">
            <h4>Sepetteki Ürünler</h4>
        </div>

                        @if (Model.CartItems.Count > 0)
                        {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Ürün Adı</th>
                                <th>Fiyatı</th>
                                <th>Miktarı</th>
                                <th>Toplam</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@item.ImageUrl" width="80" />
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.Price.ToString("c")</td>
                                            <td>@item.Quantity</td>
                                            <td>@((item.Quantity * item.Price).ToString("c"))</td>
                                            <td>
                                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                                        <i class="fa fa-times fa-fw"></i>
                                                    </button>
                                                </form>

                                            </td>
                                        </tr>
                                    }
                        </tbody>

                    </table>
                        }
                        else
                        {
                    <div class="alert alert-warning">
                        Sepette herhangi bir ürün bulunamadı!
                    </div>
                        }
    </div>
    <div class="col-md-4">

                        @if (Model.CartItems.Count > 0)
                        {
                    <div class="text-left">
                        <h4>Sepet Özeti</h4>
                    </div>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Sepet Tutarı</th>
                                <td>@Model.TotalPrice().ToString("c")</td>
                            </tr>
                            <tr>
                                <th>Kargo</th>
                                <td>Ücretsiz</td>
                            </tr>
                            <tr>
                                <th>Sipariş Toplamı</th>
                                <td>@Model.TotalPrice().ToString("c")</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center d-flex justify-content-between">
                       <div class="m-2">
                                <a href="/" class="btn btn-primary read-m">
                                <i class="fa fa-arrow-circle-left fa-fw"></i> Alışverişe Devam Et
                            </a>
                        </div>
                       <div class="m-2">
                                <a href="/" class="btn btn-primary read-m">
                                Siparişi Tamamla <i class="fa fa-arrow-circle-right fa-fw"></i>
                            </a>
                        </div>
                    </div>

                        }
                </div>
                </div>

            </div>
        </div>
    </section>
