@model List<BCShop.Entity.Concrete.Category>

@{
}
<a class="btn btn-primary mb-4" asp-area="" asp-controller="AdminCategory" asp-action="Add">Kategori Ekle</a>

<table class="table table-bordered" id="table">
	<tr>
		<th>Ad</th>
		<th>Açıklama</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var category in Model)
	{
		<tr>
			<td>@category.Name</td>
			<td>@category.Description</td>
			<td>
				<a class="btn btn-danger btnDelete" data-id="@category.Id" asp-area="" aspcontroller="AdminCategory" asp-action="Delete" asp-route-id="@category.Id">Sil</a></td>
			<td><a class="btn btn-warning" asp-area="" asp-controller="AdminCategory" asp-action="Update"asp-route-id="@category.Id">Güncelle</a></td>
		</tr>
	}
</table>


